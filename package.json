{
  "name": "@backbonedao/core-alpha",
  "description": "Unstoppable, infinitely scalable dapp container for self-sovereign metaverse",
  "author": "backbone://dao",
  "license": "AGPL-3.0-or-later",
  "version": "0.1.0",
  "main": "index.ts",
  "engines": {
    "node": "<17.0.0"
  },
  "browser": {
    "fs": false
  },
  "engineStrict": true,
  "aegir": {
    "tsRepo": true
  },
  "scripts": {
    "setup": "sh scripts/setup.sh",
    "bootstrap:network": "node network/node.js 60000 60001 60002",
    "bootstrap:test": "cross-env TEST=1 BOOTSTRAP=1 mocha --require ts-node/register ./tests/**/*.test.ts",
    "build:browser:dev": "mkdir -p dist && browserify --debug index.ts -p [ tsify ] > dist/core.js",
    "build:browser": "mkdir -p dist && browserify index.ts -p [ tsify ] | uglifyjs --compress --mangle > dist/core.min.js",
    "test:browser": "playwright test test/browser/*.spec.ts",
    "debug": "playwright test --timeout=0 test/browser/*.ts",
    "clean": "tsc --build tsconfig.build.json --clean",
    "clean-data": "rimraf ~/.backbone",
    "http-server": "python3 -m http.server 8888"
  },
  "dependencies": {
    "@backbonedao/crypto": "github:backbonedao/crypto",
    "@backbonedao/data-db": "github:backbonedao/data-db",
    "@backbonedao/data-manager": "github:backbonedao/data-manager",
    "@backbonedao/data-viewer": "github:backbonedao/data-viewer",
    "@backbonedao/network-node": "github:backbonedao/network-node",
    "@jest/globals": "^27.5.1",
    "@noble/secp256k1": "^1.2.14",
    "async": "^3.2.1",
    "b4a": "^1.3.1",
    "cross-env": "^7.0.3",
    "ethers": "^5.4.6",
    "eventemitter2": "^6.4.4",
    "isomorphic-ws": "^4.0.1",
    "lexicographic-integer": "^1.1.0",
    "lodash": "^4.17.21",
    "node": "^16.13.0",
    "platform-detect": "^3.0.1",
    "random-access-idb": "^1.2.2",
    "random-access-memory": "^4.0.0",
    "rimraf": "^3.0.2",
    "sha256": "^0.2.0",
    "sodium-javascript": "^0.8.0",
    "ttl": "^1.3.1",
    "util": "^0.12.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.20.2",
    "@types/chai": "^4.2.22",
    "@types/jest": "^27.4.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "crypto-browserify": "^3.12.0",
    "dht": "github:backbonedao/dht",
    "eslint": "^8.0.1",
    "jest": "^27.5.1",
    "mocha": "^9.1.1",
    "mocha-steps": "^1.3.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "playwright": "^1.20.2",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.1",
    "tsify": "^5.0.4",
    "typescript": "^3.9.10",
    "uglify-js": "^3.15.4"
  }
}
