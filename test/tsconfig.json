{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    // "paths": {
    //   "@/*": ["./*"]
    // },
    "moduleResolution": "node",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "_compiled",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["**/node_modules", "**/archive", "**/node", "**/dist", "**/demo", "_compiled"],
  "ts-node": {
    "files": true
  }
}
