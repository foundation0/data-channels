{
  "compilerOptions": {
    "target": "ESnext",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./dist/",
    "typeRoots": [
      "./node_modules/@types",
      "./client/types"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    //"**/node_modules",
    "./archive",
    "./tests",
    "./tmp",
    "./scripts"
  ],
  "ts-node": {
    "files": true,
  }
}